<Window x:Class="Accounts_Pos.View.Customer.Defaults"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Customer" Height="700" Width="1180"  ScrollViewer.HorizontalScrollBarVisibility="Auto" Top="0" Left="50">
    <Grid Style="{StaticResource gridbg}">

        <!--left side start here-->
        <Ellipse  HorizontalAlignment="Left" Height="30" Margin="10,8,0,0"  VerticalAlignment="Top" Width="30" Style="{StaticResource CircleSelected}"/>
        <TextBlock HorizontalAlignment="Left" Height="18" Margin="10,15,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top"  Style="{StaticResource Textblockrowselected}"/>
        <TextBlock HorizontalAlignment="Left" Height="21" Margin="53,15,0,0" TextWrapping="Wrap" Text="General Information" VerticalAlignment="Top"  Style="{StaticResource textblockrownameSelected}"/>
        <Ellipse  HorizontalAlignment="Left" Height="30" Margin="10,65,0,0"  VerticalAlignment="Top" Width="30" Style="{StaticResource CircleSelected}"/>
        <TextBlock HorizontalAlignment="Left" Height="18" Margin="10,72,0,0" TextWrapping="Wrap" Text="2" VerticalAlignment="Top"  Style="{StaticResource Textblockrowselected}"/>
        <TextBlock HorizontalAlignment="Left" Height="21" Margin="53,72,0,0" TextWrapping="Wrap" Text="Miscellaneous" VerticalAlignment="Top"  Style="{StaticResource textblockrownameSelected}"/>
        <Ellipse  HorizontalAlignment="Left" Height="30" Margin="10,123,0,0"  VerticalAlignment="Top" Width="30" Style="{StaticResource CircleSelected}"/>
        <TextBlock HorizontalAlignment="Left" Height="18" Margin="10,130,0,0" TextWrapping="Wrap" Text="3" VerticalAlignment="Top"  Style="{StaticResource Textblockrowselected}"/>
        <TextBlock HorizontalAlignment="Left" Height="21" Margin="53,130,0,0" TextWrapping="Wrap" Text="Delivery Address" VerticalAlignment="Top"  Style="{StaticResource textblockrownameSelected}"/>
        <Ellipse  HorizontalAlignment="Left" Height="30" Margin="10,182,0,0"  VerticalAlignment="Top" Width="30" Style="{StaticResource CircleSelected}"/>
        <TextBlock HorizontalAlignment="Left" Height="18" Margin="10,189,0,0" TextWrapping="Wrap" Text="4" VerticalAlignment="Top"  Style="{StaticResource Textblockrowselected}"/>
        <TextBlock HorizontalAlignment="Left" Height="21" Margin="53,189,0,0" TextWrapping="Wrap" Text="Sales Summary" VerticalAlignment="Top"  Style="{StaticResource textblockrownameSelected}"/>
        <Ellipse  HorizontalAlignment="Left" Height="30" Margin="10,242,0,0"  VerticalAlignment="Top" Width="30" Style="{StaticResource CircleSelected}"/>
        <TextBlock HorizontalAlignment="Left" Height="18" Margin="10,249,0,0" TextWrapping="Wrap" Text="5" VerticalAlignment="Top"  Style="{StaticResource Textblockrowselected}"/>
        <TextBlock HorizontalAlignment="Left" Height="21" Margin="53,249,0,0" TextWrapping="Wrap" Text="Defaults" VerticalAlignment="Top"  Style="{StaticResource textblockrownameSelected}"/>
        <Ellipse Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="30" Margin="10,305,0,0"  VerticalAlignment="Top" Width="30" Style="{StaticResource circle}"/>
        <TextBlock HorizontalAlignment="Left" Height="18" Margin="10,312,0,0" TextWrapping="Wrap" Text="6" VerticalAlignment="Top"  Style="{StaticResource textblockrow}"/>
        <TextBlock HorizontalAlignment="Left" Height="21" Margin="53,312,0,0" TextWrapping="Wrap" Text="Documents" VerticalAlignment="Top"  Style="{StaticResource textblockrowname}"/>
        <Ellipse Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="30" Margin="10,364,0,0"  VerticalAlignment="Top" Width="30" Style="{StaticResource circle}"/>
        <TextBlock HorizontalAlignment="Left" Height="18" Margin="10,371,0,0" TextWrapping="Wrap" Text="7" VerticalAlignment="Top"  Style="{StaticResource textblockrow}"/>
        <TextBlock HorizontalAlignment="Left" Height="21" Margin="53,371,0,0" TextWrapping="Wrap" Text="NL Distribution" VerticalAlignment="Top"  Style="{StaticResource textblockrowname}"/>
        <Ellipse Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="30" Margin="10,425,0,0"  VerticalAlignment="Top" Width="30" Style="{StaticResource circle}"/>
        <TextBlock HorizontalAlignment="Left" Height="18" Margin="10,432,0,0" TextWrapping="Wrap" Text="8" VerticalAlignment="Top"  Style="{StaticResource textblockrow}"/>
        <TextBlock HorizontalAlignment="Left" Height="21" Margin="53,432,0,0" TextWrapping="Wrap" Text="Credit Control" VerticalAlignment="Top"  Style="{StaticResource textblockrowname}"/>
        <Ellipse Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="30" Margin="10,487,0,0"  VerticalAlignment="Top" Width="30" Style="{StaticResource circle}"/>
        <TextBlock HorizontalAlignment="Left" Height="18" Margin="10,494,0,0" TextWrapping="Wrap" Text="9" VerticalAlignment="Top"  Style="{StaticResource textblockrow}"/>
        <TextBlock HorizontalAlignment="Left" Height="21" Margin="53,498,0,0" TextWrapping="Wrap" Text="Communications" VerticalAlignment="Top"  Style="{StaticResource textblockrowname}"/>
        <Rectangle  HorizontalAlignment="Left"  Margin="24,42,0,0"  VerticalAlignment="Top"  Style="{StaticResource LineStepSelected}"/>
        <Rectangle  HorizontalAlignment="Left"  Margin="24,99,0,0"  VerticalAlignment="Top"  Style="{StaticResource ResourceKey=LineStepSelected}"/>
        <Rectangle  HorizontalAlignment="Left"  Margin="24,158,0,0"  VerticalAlignment="Top"  Style="{StaticResource ResourceKey=LineStepSelected}"/>
        <Rectangle  HorizontalAlignment="Left"  Margin="24,217,0,0"  VerticalAlignment="Top"  Style="{StaticResource ResourceKey=LineStepSelected}"/>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left"  Margin="24,279,0,0"  VerticalAlignment="Top"  Style="{StaticResource ResourceKey=LineStep}"/>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left"  Margin="24,339,0,0"  VerticalAlignment="Top"  Style="{StaticResource ResourceKey=LineStep}"/>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left"  Margin="24,399,0,0"  VerticalAlignment="Top"  Style="{StaticResource ResourceKey=LineStep}"/>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left"  Margin="24,461,0,0"  VerticalAlignment="Top"  Style="{StaticResource ResourceKey=LineStep}"/>
        <!--left side end here-->
        <Grid>
            <Rectangle Fill="#FFF4F4F5" Height="34" Margin="219,8,0,0" Stroke="Black" VerticalAlignment="Top" Style="{StaticResource PageHeadBg}"/>
            <TextBlock HorizontalAlignment="Left" Margin="230,13,0,0" TextWrapping="Wrap" Text="Defaults" VerticalAlignment="Top" Width="437" Style="{StaticResource PageHead}"/>
            <GroupBox Header="Miscellaneous Defaults" HorizontalAlignment="Left" Height="271" Margin="219,54,0,0" VerticalAlignment="Top" Width="897" Style="{StaticResource headinggroup}">
                <Grid>
                    <TextBlock HorizontalAlignment="Left"  Margin="16,15,0,0" TextWrapping="Wrap" Text="Default Nominal Code :" VerticalAlignment="Top" Style="{StaticResource ResourceKey=textbolockbigbank}" Width="145"/>
                    <ComboBox Name="DefaultNominalCodeCombo"
                              HorizontalAlignment="Left" 
                              Height="24" 
                              Margin="161,11,0,0" 
                              VerticalAlignment="Top" 
                              Width="116" 
                              SelectedValue="{Binding selectDefault.DEFAULT_NOMINAL_CODE, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                              SelectedValuePath="Content"
                              Style="{StaticResource combobox}"
                               >
                        <ComboBoxItem Content="4000" />
                        <ComboBoxItem Content="2000" />
                    </ComboBox>
                    <TextBlock HorizontalAlignment="Left"  Margin="16,42,0,0" TextWrapping="Wrap" Text="Use default Nominal Code for Sales :" VerticalAlignment="Top" Style="{StaticResource ResourceKey=textbolockbigbank}" Width="211"/>
                    <CheckBox Content="" 
                              HorizontalAlignment="Left" 
                              Height="13" 
                              Margin="264,42,0,0" 
                              VerticalAlignment="Top" 
                              Width="18"
                              IsChecked="{Binding selectDefault.IS_NOMINALCODE_SALES, UpdateSourceTrigger=PropertyChanged}"
                        />
                    <TextBlock HorizontalAlignment="Left"  Margin="16,70,0,0" TextWrapping="Wrap" Text="Default Tax Code :" VerticalAlignment="Top" Style="{StaticResource ResourceKey=textbolockbigbank}" Width="145"/>
                    <ComboBox HorizontalAlignment="Left" 
                              Height="24" 
                              Margin="161,66,0,0" 
                              VerticalAlignment="Top" 
                              Width="116" 
                              SelectedValue="{Binding selectDefault.DEFAULT_TAX_CODE, UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"
                              SelectedValuePath="Content"
                              Style="{StaticResource combobox}"
                              >
                        <ComboBoxItem IsSelected="True" Content="T1 20.00"/>
                        <ComboBoxItem Content="T1 14.00"/>
                    </ComboBox>
                    <TextBlock HorizontalAlignment="Left"  Margin="16,97,0,0" TextWrapping="Wrap" Text="Use default Tax Code for Sales :" VerticalAlignment="Top" Style="{StaticResource ResourceKey=textbolockbigbank}" Width="211"/>
                    <CheckBox Content="" 
                              HorizontalAlignment="Left" 
                              Height="13" 
                              Margin="264,97,0,0" 
                              VerticalAlignment="Top" 
                              Width="18"
                              IsChecked="{Binding selectDefault.IS_TAXCODE_SALE, UpdateSourceTrigger=PropertyChanged}"

                              />
                    <TextBlock HorizontalAlignment="Left"  Margin="437,15,0,0" TextWrapping="Wrap" Text="Currency :" VerticalAlignment="Top" Style="{StaticResource ResourceKey=textbolockbigbank}" Width="145"/>
                    <ComboBox HorizontalAlignment="Left" 
                              Height="24" Margin="582,11,0,0" 
                              VerticalAlignment="Top" 
                              Width="184" 
                              SelectedValue="{Binding selectDefault.CURRENCY_CODE, UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"
                              SelectedValuePath="Content"
                              Style="{StaticResource combobox}">
                        <ComboBoxItem Content="4000"/>
                        <ComboBoxItem Content="2000"/>
                    </ComboBox>
                    <TextBlock HorizontalAlignment="Left"  Margin="437,76,0,0" TextWrapping="Wrap" Text="Reporting Password :" VerticalAlignment="Top" Style="{StaticResource ResourceKey=textbolockbigbank}" Width="145"/>
                    <TextBlock HorizontalAlignment="Left"  Margin="437,45,0,0" TextWrapping="Wrap" Text="Department :" VerticalAlignment="Top" Style="{StaticResource ResourceKey=textbolockbigbank}" Width="145"/>
                    <ComboBox HorizontalAlignment="Left" 
                              Height="24" 
                              Margin="582,41,0,0" 
                              VerticalAlignment="Top" 
                              Width="66" 
                              SelectedValue="{Binding selectDefault.DEPARTMENT, UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"
                              SelectedValuePath="Content"
                              DisplayMemberPath="Content"
                              
                              Style="{StaticResource combobox}">
                        <ComboBoxItem Content="4000"/>
                        <ComboBoxItem Content="2000"/>
                    </ComboBox>
                    <TextBox 
                        HorizontalAlignment="Left"  
                        Margin="658,40,0,0" 
                        TextWrapping="Wrap" 
                        Text ="{Binding departmentName}"
                        VerticalAlignment="Top" 
                        Style="{StaticResource textboxbank}" 
                        Width="108"/>
                    <TextBox 
                        HorizontalAlignment="Left"  
                        Margin="585,72,0,0" 
                        TextWrapping="Wrap" 
                        Text ="{Binding selectDefault.REPORTING_PASSWORD}"
                        VerticalAlignment="Top" 
                        Style="{StaticResource textboxbank}" 
                        Width="181"/>
                </Grid>
            </GroupBox>
            <Button Content="Back" HorizontalAlignment="Left" Height="35" Margin="225,614,0,0" VerticalAlignment="Top"  Style="{StaticResource CancelBtn}" Width="87"/>
            <Button Content="Save And Next"  Command="{Binding Path=InsertData,UpdateSourceTrigger=PropertyChanged }" HorizontalAlignment="Left" Height="35" Margin="317,612,0,0" VerticalAlignment="Top" Style="{StaticResource SaveBtn}"/>
            <Button Content="Cancel" HorizontalAlignment="Left" Height="35" Margin="978,612,0,0" VerticalAlignment="Top" Style="{StaticResource CancelBtn}"/>

        </Grid>









    </Grid>
</Window>
